<body>
  <div class="card">
    <h1>Print Entry</h1><label for="date">Date</label>
<input id="date" type="text" maxlength="50" pattern="[A-Za-z0-9 ]+" />

<label for="customer">Customer</label>
<input id="customer" type="text" maxlength="50" pattern="[A-Za-z0-9 ]+" />

<label for="sku">SKU</label>
<input id="sku" type="text" maxlength="50" pattern="[A-Za-z0-9 ]+" />

<button onclick="saveAndPrint()">Save & Print</button>

  </div>  <script>
    const fields = ["date", "customer", "sku"];

    // Load saved data on page load
    window.addEventListener("load", () => {
      fields.forEach(id => {
        const value = localStorage.getItem(id);
        if (value) document.getElementById(id).value = value;
      });
    });

    function saveAndPrint() {
      fields.forEach(id => {
        const value = document.getElementById(id).value;
        localStorage.setItem(id, value);
      });
      window.print();
    }
  </script></body>
